{
  "url": "https://www.amazon.com/best-sellers-laptops/zgbs/pc/565108",
  "properties": {
    "laptops": {
      "type": "array",
      "selector_type": "css",
      "selector": "div[data-asin]",
      "items": {
        "properties": {
          "raw_content": {
            "type": "string",
            "selector": "self",
            "attribute": "innerHTML"
          },
          "rank": {
            "type": "string",
            "selector": "span",
            "attribute": "textContent",
            "filter": {
              "attribute": "textContent",
              "pattern": "#\\d+"
            }
          },
          "title": {
            "type": "string",
            "selector": "span, a",
            "attribute": "textContent",
            "filter": {
              "attribute": "textContent",
              "pattern": ".{10,}"
            }
          },
          "link": {
            "type": "string",
            "selector": "a",
            "attribute": "href"
          },
          "price": {
            "type": "string",
            "selector": "span",
            "attribute": "textContent",
            "filter": {
              "attribute": "textContent",
              "pattern": "\\$\\d+\\.\\d{2}"
            }
          },
          "rating": {
            "type": "string",
            "selector": "span",
            "attribute": "textContent",
            "filter": {
              "attribute": "textContent",
              "pattern": "\\d\\.\\d out of 5 stars"
            }
          },
          "review_count": {
            "type": "string",
            "selector": "span",
            "attribute": "textContent",
            "filter": {
              "attribute": "textContent",
              "pattern": "^\\d{1,3}(,\\d{3})*$"
            }
          },
          "image": {
            "type": "string",
            "selector": "img",
            "attribute": "src"
          }
        }
      }
    }
  },
  "actions": [
    {
      "type": "wait",
      "duration": 5
    }
  ],
  "post_actions": {
    "network_requests": {
      "type": "network",
      "methods": ["GET"],
      "pattern": ".*(?:json|api|product).*"
    }
  }
}
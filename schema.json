{
  "url": "https://www.bbc.com",
  "properties": {
    "title": {
      "type": "string",
      "selector": "title",
      "selector_type": "css"
    },
    "description": {
      "type": "string",
      "selector": "meta[name='description']",
      "selector_type": "css",
      "attribute": "content"
    },
    "newsLinks": {
      "type": "regex",
      "pattern": "news/[\\w-]+$",
      "selector_type": "css",
      "selector": "a"
    },
    "images": {
      "type": "array",
      "selector": "img",
      "selector_type": "css",
      "items": {
        "properties": {
          "src": {
            "selector": "self",
            "selector_type": "css",
            "attribute": "src"
          },
          "alt": {
            "selector": "self",
            "selector_type": "css",
            "attribute": "alt"
          }
        }
      }
    },
    "footer": {
      "type": "html",
      "selector": "footer",
      "selector_type": "css"
    }
  },
  "actions": [
    {
      "type": "scroll",
      "duration": 1
    },
    {
      "type": "wait",
      "duration": 2
    }
  ]
}
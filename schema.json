{
  "url": "https://www.theguardian.com/uk",
  "properties": {
    "headlines": {
      "type": "array",
      "selector_type": "css",
      "selector": "h2, h3, h4",
      "items": {
        "properties": {
          "text": {
            "type": "string",
            "selector": "self"
          },
          "link": {
            "type": "string",
            "selector": "a",
            "attribute": "href"
          }
        },
        "filter": {
          "attribute": "text",
          "pattern": ".{10,}"  // Ensures headlines are at least 10 chars to avoid noise
        }
      }
    },
    "summaries": {
      "type": "array",
      "selector_type": "css",
      "selector": "p",
      "items": {
        "properties": {
          "text": {
            "type": "string",
            "selector": "self"
          }
        },
        "filter": {
          "attribute": "text",
          "pattern": ".{20,}"  // Filters for summaries at least 20 chars long
        }
      }
    },
    "media": {
      "type": "array",
      "selector_type": "css",
      "selector": "img, video",
      "items": {
        "properties": {
          "src": {
            "type": "string",
            "selector": "self",
            "attribute": "src"
          },
          "alt": {
            "type": "string",
            "selector": "self",
            "attribute": "alt"
          }
        },
        "filter": {
          "attribute": "src",
          "pattern": ".*\\.(jpg|png|gif|mp4)$"  // Targets common media formats
        }
      }
    },
    "article_links": {
      "type": "array",
      "selector_type": "css",
      "selector": "a[href]",
      "items": {
        "properties": {
          "href": {
            "type": "string",
            "selector": "self",
            "attribute": "href"
          },
          "text": {
            "type": "string",
            "selector": "self"
          }
        },
        "filter": {
          "attribute": "href",
          "pattern": "^https://www.theguardian.com/.*"  // Keeps only Guardian article URLs
        }
      }
    }
  },
  "post_actions": {
    "network_requests": {
      "type": "network",
      "methods": ["GET"],
      "pattern": ".*(?:json|api|news).*"  // Captures potential news API calls
    }
  }
}
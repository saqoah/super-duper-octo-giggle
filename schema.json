{
  "url": "https://www.amazon.com/best-sellers-laptops/zgbs/pc/565108",
  "properties": {
    "page_content": {
      "type": "string",
      "selector_type": "css",
      "selector": "body",
      "attribute": "innerHTML"
    },
    "laptops": {
      "type": "array",
      "selector_type": "css",
      "selector": "div[data-asin]",
      "items": {
        "properties": {
          "raw_content": {
            "type": "string",
            "selector": "self",
            "attribute": "innerHTML"
          },
          "title": {
            "type": "string",
            "selector": "*",
            "attribute": "textContent",
            "filter": {
              "attribute": "textContent",
              "pattern": ".{10,}"
            }
          },
          "link": {
            "type": "string",
            "selector": "a",
            "attribute": "href"
          },
          "price": {
            "type": "string",
            "selector": "*",
            "attribute": "textContent",
            "filter": {
              "attribute": "textContent",
              "pattern": "\\$\\d+\\.\\d{2}"
            }
          }
        },
        "extract_children": true
      }
    }
  },
  "actions": [
    {
      "type": "wait",
      "duration": 15
    }
  ],
  "post_actions": {
    "network_requests": {
      "type": "network",
      "methods": ["GET"],
      "pattern": ".*(?:json|api|product).*",
      "capture_response": true
    }
  },
  "headers": {
    "Accept-Language": "en-US,en;q=0.9",
    "Referer": "https://www.google.com/"
  },
  "max_retries": 5,
  "timeout": 120
}
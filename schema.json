{
  "url": "https://www.amazon.com/best-sellers-laptops/zgbs/pc/565108",
  "properties": {
    "laptops": {
      "type": "array",
      "selector_type": "css",
      "selector": "div[data-asin]",
      "items": {
        "properties": {
          "rank": {
            "type": "string",
            "selector": "span.zg-bdg-text, span",
            "attribute": "textContent"
          },
          "title": {
            "type": "string",
            "selector": "a span, h2",
            "attribute": "textContent"
          },
          "link": {
            "type": "string",
            "selector": "a",
            "attribute": "href"
          },
          "price": {
            "type": "string",
            "selector": "span[class*='price'], span",
            "attribute": "textContent",
            "filter": {
              "attribute": "textContent",
              "pattern": "\\$\\d+\\.\\d{2}"
            }
          },
          "rating": {
            "type": "string",
            "selector": "span[aria-label*='out of 5 stars'], span",
            "attribute": "aria-label"
          },
          "review_count": {
            "type": "string",
            "selector": "span.a-size-small, span",
            "attribute": "textContent",
            "filter": {
              "attribute": "textContent",
              "pattern": "^\\d{1,3}(,\\d{3})*$"
            }
          },
          "image": {
            "type": "string",
            "selector": "img",
            "attribute": "src"
          }
        },
        "filter": {
          "attribute": "title",
          "pattern": ".{10,}"
        }
      }
    }
  },
  "actions": [
    {
      "type": "wait",
      "duration": 3 
    }
  ],
  "post_actions": {
    "network_requests": {
      "type": "network",
      "methods": ["GET"],
      "pattern": ".*(?:json|api|product).*"
    }
  }
}
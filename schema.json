{
  "url": "https://www.amazon.com/best-sellers-laptops/zgbs/pc/565108",
  "properties": {
    "laptops": {
      "type": "array",
      "selector_type": "css",
      "selector": "div[data-asin], div[id*='grid']",
      "items": {
        "properties": {
          "raw_content": {
            "type": "string",
            "selector": "self",
            "attribute": "innerHTML"
          },
          "title": {
            "type": "string",
            "selector": "*",
            "attribute": "textContent",
            "filter": {
              "attribute": "textContent",
              "pattern": ".{10,}"
            }
          },
          "link": {
            "type": "string",
            "selector": "a",
            "attribute": "href"
          },
          "price": {
            "type": "string",
            "selector": "*",
            "attribute": "textContent",
            "filter": {
              "attribute": "textContent",
              "pattern": "\\$\\d+\\.\\d{2}"
            }
          }
        }
      }
    }
  },
  "actions": [
    {
      "type": "wait",
      "duration": 10 
    }
  ],
  "post_actions": {
    "network_requests": {
      "type": "network",
      "methods": ["GET"],
      "pattern": ".*(?:json|api|product).*"
    }
  }
}
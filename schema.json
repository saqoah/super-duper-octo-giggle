{
  "url": "https://www.theguardian.com/uk",
  "properties": {
    "articles": {
      "type": "array",
      "selector_type": "css",
      "selector": ".fc-item--standard",
      "items": {
        "properties": {
          "title": {
            "type": "string",
            "selector": ".fc-item__title",
            "attribute": null
          },
          "description": {
            "type": "string",
            "selector": ".fc-item__standfirst",
            "attribute": null
          },
          "link": {
            "type": "string",
            "selector": ".fc-item__link",
            "attribute": "href"
          },
          "image": {
            "type": "string",
            "selector": "picture img",
            "attribute": "src"
          },
          "category": {
            "type": "string",
            "selector": ".fc-item__kicker",
            "attribute": null
          },
          "timestamp": {
            "type": "string",
            "selector": "time",
            "attribute": "datetime"
          }
        }
      }
    },
    "top_stories": {
      "type": "array",
      "selector_type": "css",
      "selector": ".fc-item--type-analysis",
      "items": {
        "properties": {
          "title": {
            "type": "string",
            "selector": ".fc-item__title",
            "attribute": null
          },
          "link": {
            "type": "string",
            "selector": ".fc-item__link",
            "attribute": "href"
          },
          "category": {
            "type": "string",
            "selector": ".fc-item__kicker",
            "attribute": null
          }
        }
      }
    },
    "sections": {
      "type": "array",
      "selector_type": "css",
      "selector": ".fc-container__header__title",
      "items": {
        "properties": {
          "name": {
            "type": "string",
            "selector": "self",
            "attribute": null
          },
          "link": {
            "type": "string",
            "selector": "a",
            "attribute": "href"
          }
        }
      }
    }
  },
  "actions": [
    {
      "type": "wait",
      "duration": 2.0
    }
  ],
  "post_actions": {
    "breaking_news_banners": {
      "type": "string",
      "selector_type": "css",
      "selector": ".breaking-news",
      "attribute": "innerHTML"
    },
    "headline_statistics": {
      "type": "regex",
      "selector_type": "css",
      "selector": ".js-headline-text",
      "pattern": "([0-9,]+)\\s+(?:cases|deaths|people)"
    },
    "api_endpoints": {
      "type": "network",
      "methods": ["GET"],
      "pattern": "theguardian\\.com/api/"
    }
  }
}